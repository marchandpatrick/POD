         author = c(person("Markus", "Boenn")),
         year = year,
         note = note,
         url = "https://CRAN.R-project.org/package=POD",
         institution = "State Office for Consumer Protection Saxony-Anhalt",
        address = "Freiimfelder Str. 68, 06112 Halle (Saale), Germany",
        keywords = "pod, lod, pcr",
        email = "markus.boenn@sachsen-anhalt.de"
         )
